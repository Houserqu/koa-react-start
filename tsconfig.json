{
  "compilerOptions": {
    "module": "commonjs",   // 编译生成的模块系统代码
    "target": "es5",        // 指定ecmascript的目标版本
    "strict": true,         // 禁止隐式any类型
    "outDir": "dist",
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators": true, // 装饰器功能
    "emitDecoratorMetadata": true,
    "removeComments": true, // 删除注释
    "allowJs": true,        // 是否允许出现js
    "newLine": "LF",
    "baseUrl": "./",
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
